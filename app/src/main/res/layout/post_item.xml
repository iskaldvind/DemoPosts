<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingTop="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="4dp"
    android:background="@drawable/post_background">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/background_text"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/rating_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_star"
        app:tint="@color/color_star"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textSize="14sp"
        android:textColor="@color/background_text"
        android:layout_marginStart="16dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/rating_icon"
        app:layout_constraintStart_toEndOf="@id/rating_icon"
        app:layout_constraintBottom_toBottomOf="@id/rating_icon"/>
    <ImageView
        android:id="@+id/comments_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_comment"
        app:tint="@color/color_comment"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/comments"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="@color/background_text"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/comments_icon"
        app:layout_constraintStart_toEndOf="@id/comments_icon"
        app:layout_constraintBottom_toBottomOf="@id/comments_icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>